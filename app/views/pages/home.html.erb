
<div id="container">
<div class="left-container">
  <div class="card">
    <div class="card-content">
      <% @tasks.each do |task| %>
        <div class="cards">
          <%= link_to task_path(task), rel: "noopener noreferrer nofollow", target: "listing_#{task.id}", aria_labelledby: "title_#{task.id}" do %>
            <div class="title-wrapper">
              <h2 class="title"><%= task.name %></h2>
            </div>
          <% end %>
          <p><strong>Pour <%= @task %></strong></p>
          <p><strong>Déjà faite: <%= task.done ? 'Oui' : 'Non' %></strong></p>
        </div>

      <% end %>
      <%= link_to "Mes listes", lists_path %>
    </div>

  </div>
</div>

    <div class="right-container">
      <%= link_to calendars_url, class: "icon" do %>
          <%= image_tag "schedule.png" %>
      <% end %>
      <%= link_to calendars_url, class: "icon" do %>
        <%= image_tag "bell.png" %>
      <% end %>
      <%= link_to lists_url, class: "icon" do %>
          <%= image_tag "family.png" %>
      <% end %>
      <%= link_to trophees_url, class: "icon" do %>
        <%= image_tag "trophy.png" %>
      <% end %>
    </div>
  </div>
