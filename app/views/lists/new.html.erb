
<%= simple_form_for @list do |f| %>
  <%= f.input :name %>
  <%= f.input :tasks,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  collection: Task::GENERIC_TASKS,
                  item_wrapper_class: 'tag-item' %>,
  <%= f.submit %>
  <%= f.input :task_names, as: :hidden, input_html: { value: []} %>
<% end %>

